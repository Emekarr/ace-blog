<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/blog.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/formpage.css" />
    <title>Ace Blog admin panel</title>
  </head>

  <body>
    <%- include("../partials/_authfailedbanner") %>

        <main>
            <div class="container">
                <form action="/admin" method="POST">
                    <div class="form">
                        <h1>Create Post</h1>
                        <input type="text" name="title" placeholder="article title" required autofocus />
                        <input type="text" name="author" placeholder="author" required autofocus />
                        <textarea style="width: 100%; height: 20rem" type="text" name="body" placeholder="article body" required autofocus></textarea>
                        <div class="buttons">
                            <button type="submit" class="btn">create post</button>
                        </div>
                    </div>
                </form>
            </div>
        </main>
        
        <% feedbacks.forEach(feedback => { %>
            <section>
                <div class="blog-container comment-container">
                    <form action="<%="/sendmail?id=" + feedback._id %>" method="POST">
                        <div class="blog-form">
                            <div class="re">
                                <div class="re-name">
                                    <h4> <%= feedback.username %> </h4>
                                </div>
                            </div>
                            <div class="message">
                                <p>
                                    <%= feedback.message %> 
                                </p>
                            </div>
                            <textarea style="width: 100%; height: 5rem" type="text" name="body" placeholder="reply this user" required autofocus></textarea>
                            <button type="submit" class="btn">Reply</button>
                        </div>
                    </form>
                </div>
            </section>
        <% }) %>
</body>

    <script src="/js/script.js"></script>
  </body>
</html>
